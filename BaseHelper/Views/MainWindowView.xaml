<Window x:Class="BaseHelper.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BaseHelper.Services.Navigators"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0"  IsMainMenu="True" >
            <MenuItem Header="Funkcja">
                <MenuItem Header="Base Helper" Command="{Binding BtnSwitchView}" 
                CommandParameter="{x:Static vm:ViewType.BaseHelper}" />
                <MenuItem Header="XML Reader"  Command="{Binding BtnSwitchView}" 
                CommandParameter="{x:Static vm:ViewType.XmlReader}" />
            </MenuItem>
        </Menu>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" >
            <ContentControl Content="{Binding CurrentView  }" />
        </ScrollViewer>
        

    </Grid>
</Window>
